<% title 'Account | i2i' %>

<div class="l-library l-account">
  <div class="l-intro js-hero">
    <div class="nav">
      <div class="wrapper">
        <%= render partial: 'shared/header', locals: { isCover: true } %>
      </div>
    </div>
    <div class="fixed-nav js-fixed-nav">
      <div class="wrapper">
        <%= render partial: 'shared/header', locals: { isFixed: true } %>
      </div>
    </div>
    <div class="content" style="background-image: url(<%= asset_path('headers/header-bg-insights.jpg') %>)">
      <div class="l-title">
        <div class="wrapper">
          <div class="row">
            <div class="c-hero">
              <div class="grid-l-6">
                <h1 class="title -highlight -huge">Welcome <%= current_user.name if current_user.name %></h1>
                <p class="subtitle">
                  The User Area is a complete control panel from where you can manage your data uploads. To upload GIS data, click on Datasets below and follow the instructions. Your data will have to be approved before it is displayed on the platform.<br />
                  It is possible to edit your personal information by clicking on the account details below.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="l-library-content-selector">
        <div class="wrapper">
          <div class="row">
            <div class="selectors-container grid-12">
              <%= link_to 'Datasets', datasets_path, class: "content-selector" %>
              <%= link_to 'Account details', account_path, class: "content-selector -current" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class=" l-section">
    <div class="wrapper">
      <div class="row">
        <div class="grid-s-12">
          <div class="account-form-wrapper">
            <div class="grid-s-12 grid-m-8">

              <%= form_for current_user, url: user_url(current_user), method: :patch, html: { class: "c-form account-form" } do |f| %>
                <div class="custom-row">
                  <%= f.label :name, 'NAME' %>
                  <%= f.text_field :name %>
                </div>

                <div class="custom-row">
                  <%= f.label :surname, 'SURNAME' %>
                  <%= f.text_field :surname %>
                </div>

                <div class="custom-row">
                  <%= f.label :email, 'EMAIL' %>
                  <%= f.email_field :email, disabled: true, readonly: true %>
                </div>

                <div class="custom-row">
                  <%= f.label :company, 'INSTITUTION/COMPANY' %>
                  <%= f.text_field :company %>
                </div>

                <div class="custom-row">
                  <%= f.label :position, 'POSITION' %>
                  <%= f.text_field :position %>
                </div>

                <div class="custom-row">
                  <%= f.label :city, 'CITY' %>
                  <%= f.text_field :city %>
                </div>

                <div class="custom-row">
                  <%= f.label :country, 'COUNTRY' %>
                  <%= f.text_field :country %>
                </div>

                <div class="custom-row">
                  <%= f.label :attribution, 'ATTRIBUTION (NAME OF UPLOADER)' %>
                  <%= f.text_field :attribution %>
                </div>

                <br />
                <br />
                <br />
                <div class="form-actions">
                  <%= f.submit "Save", class: "primary" %>

                  <%= link_to 'Delete account',
                                user_path(current_user),
                                method: :delete,
                                class: '-danger',
                                data: { confirm: 'Are you sure?' } %>
                </div>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
