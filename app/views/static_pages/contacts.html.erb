<% title 'Contact FMT' %>

<% content_for :head do %>
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
<% end %>

<div class="l-about">
  <div class="l-intro js-hero">
    <div class="nav">
      <div class="wrapper">
        <%= render partial: 'shared/header', locals: { isCover: true } %>
      </div>
    </div>
    <div class="fixed-nav js-fixed-nav">
      <div class="wrapper">
        <%= render partial: 'shared/header', locals: { isFixed: true } %>
      </div>
    </div>
    <div class="content" style="background-image: url(<%= asset_path('headers/header-bg-gradient@2x.png') %>)">
      <div class="l-title">
        <div class="wrapper">
          <div class="row">
            <div class="c-hero">
              <div class="grid-l-6">
                <h1 class="title -highlight -huge">Contact<span style="color: #ffffff"> FinMark Trust</span></h1>
                <p class="subtitle">
                  Get in touch with us to exchange ideas or if you would like to work with us. <a href="#Contact" class="js-anchor">Contact us</a>, <a href="#Location" class="js-anchor">FMT Location</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>







  <div class="l-content">
    <div class="wrapper">
    <div class="l-section -insights">

      <div id="Contact" class="c-card-highlight -about -centered">
        <div class="content">
          <h3 class="title -dark -big">FMT contact form</h3>



            <div class="l-form-contact">
                <%= simple_form_for @contact, url: about_form_contacts_path, html: { class: 'c-form contact-form' }, defaults: { wrapper_html: { class: 'custom-row' } }, remote: true do |f| %>
                  <div id="messages"></div>
                  <%= f.error :base %>
                  <%= f.input :first_name, required: true %>
                  <%= f.input :last_name, required: true %>
                  <%= f.input :email, required: true %>
                  <%= f.input :title %>
                  <%= f.input :company %>
                  <%= f.input :country, as: :string %>
                  <%= f.input :message, required: true %>
                  <div class="actions">
                    <%= recaptcha_tags %>
                    <%= f.button :submit, 'Send', class: 'primary-btn' %>
                  </div>
                <% end %>
              </div>

          </div>



 </div>
 </div>

 </div>
 </div>






  <div class="l-content">
    <div class="wrapper">
    <div class="l-section -insights">

