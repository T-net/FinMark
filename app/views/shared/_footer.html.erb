<footer class="c-footer">
  <div class="footer-header">
    <div class="wrapper">
      <div class="row">
        <div class="grid-s-12 grid-m-6 footer-header-col-1">
          <div class="header-item -newsletter js-subscribe">
            <h2 class="title -big">Newsletter</h2>
            <p class="text -leading">
              <button type="button" class="text -highlight -button js-subscribe-link" data-id="alyukr"><u>Sign up here</u></button> for our monthly FI Snapshot in data and innovation in the financial services sector.
            </p>
            <%-#<p class="text">And, to receive Finmark updates, <button type="button" class="text -highlight -button js-subscribe-link" data-id="dlhlud" data-institution="true">subscribe</button> to the FI Snapshot quarterly newsletter.</p>-%>
          </div>
        </div>

        <div class="grid-s-12 grid-m-6">
          <div class="header-item -contact-us">
            <h2 class="title -big">Contact us</h2>
            <a class="text -highlight -leading" href="mailto:<%= ENV['I2I_MAIL'] %>"><%= ENV['I2I_MAIL'] %></a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="footer-content">
    <div class="wrapper">

      <div class="pre-footer">
        <div class="row">
          <div class="grid-s-12 grid-l-4">

            <div class="social">
              <h4 class="title -light -medium -center">Follow us</h4>
              <ul class="social-list">
                <li class="social-item">
                  <a class="social-link" href="https://www.linkedin.com/company/finmark-trust/" target="_blank" rel="noopener noreferrer">
                    <svg class="icon"><use xlink:href="#icon-linkedln"></use></svg>
                  </a>
                </li>
                <li class="social-item">
                  <a class="social-link" href="https://twitter.com/Finmarktrust" target="_blank" rel="noopener noreferrer">
                    <svg class="icon"><use xlink:href="#icon-twitter"></use></svg>
                  </a>
                </li>
                <li class="social-item">
                  <a class="social-link" href="https://www.youtube.com/channel/UCU_dkL66EAKob74u0vnAwrA" target="_blank" rel="noopener noreferrer">
                    <svg class="icon"><use xlink:href="#icon-youtube"></use></svg>
                  </a>
                </li>
              </ul>
            </div>
          </div>

          <div class="grid-s-12 grid-l-4">
            <div class="programmes">
              <h4 class="title -light -medium -center">Programmes</h4>
              <div class="programmes-row">
                <div class="programmes-col">
                  <ul>
                    <li>SADC Payments and Remittances</li>
                    <li>SADC MSME MAP</li>
                    <li>SADC FI Strategy</li>
                    <li>SADC Consumer MAP</li>
                    <li>SA FI</li>
                    <li>SA FI Payments and Remittances</li>
                    <li>Promoting Beneficial Usage</li>
                    <li>Inclusion Policy Coordination</li>
                    <li>Enabling SME Inclusion</li>
                  </ul>
                </div>
                <div class="programmes-col">
                  <ul>
                    <li>SADC Payments and Remittances</li>
                    <li>SADC MSME MAP</li>
                    <li>SADC FI Strategy</li>
                    <li>SADC Consumer MAP</li>
                    <li>SA FI</li>
                    <li>SA FI Payments and Remittances</li>
                    <li>Promoting Beneficial Usage</li>
                    <li>Inclusion Policy Coordination</li>
                    <li>Enabling SME Inclusion</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <div class="grid-s-12 grid-l-4">
            <div class="partners">
              <h4 class="title -light -medium -center">Partners</h4>

              <ul class="partners-list">
                <li class="partners-item uk-aid-item">
                  <%= link_to image_tag('/images/logos/uk-aid@2x.png',
                    :width => '116',
                    :alt => 'UK Aid'), 'https://www.ukaiddirect.org/',
                    :target => '_blank',
                    :rel => 'noopener'
                  %>
                </li>
                <li class="partners-item un-cdf-item">
                  <%= link_to image_tag('/images/logos/un-cdf@2x.png',
                    :width => '121',
                    :alt => 'UN Capital Development Fund'), 'https://www.uncdf.org/',
                    :target => '_blank',
                    :rel => 'noopener'
                  %>
                </li>
                <li class="partners-item mastercard-foundation-item">
                  <%= link_to image_tag('/images/logos/mastercard-foundation@2x.png',
                    :width => '96',
                    :alt => 'Mastercard Foundation'), 'https://mastercardfdn.org/',
                    :target => '_blank',
                    :rel => 'noopener'
                  %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
