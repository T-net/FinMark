<% title 'Login' %>
<div class="l-account">
  <div class="l-intro js-hero" style="background-image: url(<%= asset_path('headers/header-bg-home.jpg') %>)">
    <div class="fixed-nav js-fixed-nav">
      <div class="wrapper">
        <%= render partial: 'shared/header' , locals: { isFixed: true } %>
      </div>
    </div>
  </div>

  <div class="l-content">
  <div class="wrapper">
    <div class="row">
      <div class="grid-s-12">
        <div class="l-form-contact" style="display: flex; justify-content: center;">
          <div class="grid-s-11 grid-m-8">
            <div class="form-box">
                <h2 class="form-header">Reset password</h2>
                <p>
                  To reset your password, type your email address:
                </p>
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "c-form account-form" }) do |f| %>
                  <%= devise_error_messages! %>

                  <div class="field custom-row">
                    <%= f.label :email, 'EMAIL' %>
                    <%= f.email_field :email, autofocus: true, required %>
                  </div>

                  <br/>
                  <div class="form-actions">
                      <%= f.submit "Reset", :class => 'primary' %>

                  <% end %>


                  <%- if controller_name != 'sessions'%>
                    <%= link_to "Log in", new_session_path(resource_name), :class => '-link' %>
                  <% end -%>
                </div>
              </div>
            <div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
