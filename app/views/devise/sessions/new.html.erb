<div class="l-account">
  <div class="l-intro js-hero" style="background-image: url(<%= asset_path('headers/header-bg-home.jpg') %>)">
    <div class="fixed-nav js-fixed-nav">
      <div class="wrapper">
        <%= render partial: 'shared/header' , locals: { isFixed: true } %>
      </div>
    </div>
  </div>

  <div class="l-content">
    <div class="wrapper">
      <div class="row">
        <div class="grid-s-12">
          <div class="l-form-contact" style="display: flex; justify-content: center;">
            <div class="grid-s-11 grid-m-8">
              <div class="form-box">
                <h2 class="form-header">Log in</h2>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "c-form account-form" }) do |f| %>

                  <div class="field custom-row">
                    <%= f.label :email, 'EMAIL' %>
                    <%= f.email_field :email, autofocus: true %>
                  </div>

                  <div class="field custom-row">
                    <%= f.label :password, 'PASSWORD' %>
                    <%= f.password_field :password, autocomplete: "off"%>
                  </div>
                  <div class="form-actions">
                    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                      <%= link_to "Register", new_registration_path(resource_name), :class => 'primary'%>
                    <% end -%>

                    <%= f.submit "Log in", :class => 'secondary' %>

                </div>
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Reset password", new_password_path(resource_name), :class => 'reset-btn'%>
                <% end -%>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
