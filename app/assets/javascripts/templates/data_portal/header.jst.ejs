<% if (error || !indicators.length) { %>

  <div class="grid-s-12">
    <div class="row">
      <div class="container">
        <div class="grid-s-12 grid-m-8 grid-l-7 -no-mobile">
          <h1 class="title-placeholder"></h1>
        </div>
      </div>
    </div>
    <div class="grid-s-12">
      <div class="row">
        <div class="grid-s-12 grid-l-7">
          <div class="filters-placeholder">
            <span class="c-tag"></span>
            <span class="c-tag"></span>
          </div>
        </div>
      </div>
    </div>
    <div class="grid-s-12">
      <div class="l-data-definition">
        <div class="row">
          <div class="container">
            <div class="grid-s-12 grid-l-7">
              <!-- <div class="description-placeholder">
                <div></div>
                <div></div>
                <div></div>
              </div> -->
            </div>
          </div>
        </div>
      </div>
    </div>

<% } else { %>

  <div class="grid-s-12">
    <div class="row">
      <div class="container">
        <!-- <div class="grid-s-12 grid-m-8 grid-l-7">
          <h1 class="title -highlight -huge js-country"><%= country %></h1>
        </div> -->
        <div class="grid-m-4 grid-l-5 _no-mobile _align-right">
          <button class="c-button -white js-customize-indicators">Customise indicators</button>
        </div>
      </div>
    </div>
  </div>
  <div class="grid-s-12">
    <div class="row">
      <div class="grid-s-12 grid-l-7">
        <div class="l-population">
          <% if (isCGAP) { %>
            <span class="title">Based on smallholder farmers of</span>
          <% } else { %>
            <span class="title">Based on adult population of</span>
          <% } %>
          <span class="number"><%= population %></span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="grid-s-12 grid-l-7">
        <div class="l-data-range">
          <span class="c-tag js-filter-tag" data-tab="context"><%= jurisdiction %></span>
          in
          <span class="c-tag js-filter-tag" data-tab="context"><%= year %></span>
          <p>
            Showing data about
            <% indicators.forEach(function (indicator, index) { %>
              <%= indicators.length > 1 && index === indicators.length - 1 ? 'and' : '' %> <span class="c-tag js-filter-tag" data-tab="indicator"><%= indicator.name %></span>
            <% }) %>
          </p>
          <% if (filters.length) { %>
            <p>
              Filtered by
              <% filters.forEach(function (filter, index) { %>
                <%= filters.length > 1 && index === filters.length - 1 ? 'and' : '' %> <span class="c-tag js-filter-tag" data-tab="filter"><%= filter.name + ': ' + filter.options.join(', ') %></span>
              <% }) %>
            </p>
          <% } %>
        </div>
      </div>
      <div class="grid-s-12 grid-l-5">
        <% if (country === 'Tanzania' && year === 2017) { %>
          <div style="text-align: right">
            <img src="/images/logos/finscope.png" width="220" height="100">
          </div>
        <% } %>

        <% if (isCGAP) { %>
          <div style="text-align: right"></div>
            <img src="/images/logos/CGAP_white.svg" width="220" height="100" style="float: right">
            <div style="float: right; color: #ffffff; text-align: right">The following dataset is nationally representative of smallholder farmers for this country.</div>
          </div>
        <% } %>

        <% if (isUNCDF) { %>
          <div style="text-align: right"></div>
            <div style="float: right; color: #ffffff; text-align: right">Data supplied by</div>
            <img src="/images/logos/uncdf_white.svg" width="220" height="100" style="float: right">
          </div>
        <% } %>

        <% if (isAFR) { %>
          <div style="text-align: right"></div>
            <div style="float: right; color: #ffffff; text-align: right">Data supplied by</div>
            <img src="/images/logos/afr_white.svg" width="220" height="100" style="float: right">
          </div>
        <% } %>

        <% if (!(isAFR || isUNCDF || isCGAP)) { %>
          <div style="text-align: right"></div>
            <div style="float: right; color: #ffffff; text-align: right">Data supplied by</div>
            <img src="/images/logos/finscope.svg" width="220" height="100" style="float: right">
          </div>
        <% } %>

      </div>
    </div>
  </div>
  <div class="grid-s-12">
    <div class="l-data-definition">
      <div class="row">
        <div class="container">
          <div class="grid-s-12 grid-l-7">
            <!-- <div class="description-placeholder">
              <div></div>
              <div></div>
              <div></div>
            </div> -->
          </div>
          <div class="grid-s-12 _no-tablet">
            <button class="c-button -white js-customize-indicators">Customise indicators</button>
          </div>
        </div>
      </div>
    </div>
  </div>

<% } %>
