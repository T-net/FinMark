App.Helper.Analytics = {
  /**
   * Send an analytics event
   */
  sendEvent: function () {
    var params = Array.prototype.slice.call(arguments);
    params.unshift('send', 'event');

    var func = <%= Rails.env.production? ? 'window.ga || function () {}' : 'console.log' %>;
    func.apply(func, params);
  }
};
